                    <span asp-validation-for="ImageURL" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="Açıklama">Faceboook URL</label>
                    <input type="text" asp-for="FacebookURL" class="form-control" placeholder="Facebook URL">
                </div>
                <div class="form-group">
                    <label for="Açıklama">Twitter</label>
                    <input type="text" asp-for="TwitterURL" class="form-control" placeholder="Twitter URL">
                </div>
                <div class="form-group">
                    <label for="Açıklama">Website</label>
                    <input type="text" asp-for="WebsiteURL" class="form-control" placeholder="Website URL">
                </div>
