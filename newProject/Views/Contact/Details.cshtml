@model EntitiyLayer.Concrete.Contact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>

            <form class="form-group">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.ContactID)
                    <label >Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="form-group">
                   
                    <label>Mail Adresi</label>
                    <input type="email" class="form-control" asp-for="Mail" />
                </div>
                
                <div class="form-group">

                    <label>Gönderi Tarihi</label>
                    <input type="datetime" class="form-control" asp-for="MessageDate" />
                </div>
                <div class="form-group">

                    <label>Mesaj</label>
                    <textarea cols="5" rows="20" class="form-control" asp-for="Message"></textarea>
                </div>
            </form>
            <a href="/Contact/index" class="btn btn-linkedin">Geri Dön</a>
        </div>
    </div>
</div>
